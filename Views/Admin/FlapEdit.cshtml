@model Flappr.Dto.FlapRequest
@using Flappr.Helpers

@section Styles {
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
}

<style>
    .card{
        background: linear-gradient(180deg, rgba(255,255,255,0.03), rgba(255,255,255,0.01));
        border-radius: 16px;
        padding: 25px;
        box-shadow: 0 8px 32px rgba(0,0,0,0.4);
        backdrop-filter: blur(6px);
        transition: box-shadow 0.3s ease;
        margin-bottom: 20px;
        color: #fff;
    }

    .card-textarea{
        width: 100%;
        background: linear-gradient(180deg, rgba(255,255,255,0.03), rgba(255,255,255,0.01));
        border-radius: 16px;
        padding: 25px;
        box-shadow: 0 8px 32px rgba(0,0,0,0.4);
        backdrop-filter: blur(6px);
        transition: box-shadow 0.3s ease;
        margin-bottom: 20px;
        color: #fff;
    }
</style>
<body class="bg-gray-200">
    <div class="max-w-2xl mx-auto mt-10">
        <div class="card">
            <div class="flex items-center gap-3 mb-4">
                <img src="@Model.UserImgUrl ?? " /uploads/images.jpg"" alt="Profil" class="w-12 h-12 rounded-full">
                <div class="flex items-center space-x-2 text-sm text-gray-600">
                    <span class="font-sm text-white">@Model.UserUsername</span>
                    <span>@("@" + Model.UserNickname)</span>
                    <span>•</span>
                    <span>@TimeHelper.FormatTime(Model.CreatedDate)</span>
                </div>

            </div>

            <form method="post">
                <textarea name="detail" class="card-textarea" rows="5">@Model.Detail</textarea>
                <div class="flex justify-end gap-2">
                    <a href="/Profile/@Model.UserNickname" class="px-4 py-2 rounded-md border hover:bg-gray-100 transition">İptal</a>
                    <button type="submit" class="px-4 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700 transition">Kaydet</button>
                </div>
            </form>
        </div>
    </div>
</body>
