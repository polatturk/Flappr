@model User

@section Styles {
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <style>
        .card {
            width: min(420px, 92vw);
            background: linear-gradient(180deg, rgba(255,255,255,0.02), rgba(255,255,255,0.01));
            border-radius: 14px;
            padding: 28px;
            text-align: center;
            box-shadow: 0 8px 30px rgba(2,6,23,0.6);
            backdrop-filter: blur(6px);
            -webkit-backdrop-filter: blur(6px);
        }

        .tabs button {
            padding: 0.5rem 1rem;
            background: transparent;
            border: none;
            cursor: pointer;
            transition: color 0.2s, border-bottom 0.2s;
        }

            .tabs button.active {
                color: white; /* aktif sekme beyaz */
                border-bottom: 2px solid #3B82F6; /* mavi alt çizgi */
            }

            .tabs button:not(.active) {
                color: #9aa4b2; /* gri */
            }
    </style>
}

@section Scripts {
    <script>
        const tabs = document.querySelectorAll('[data-tab-target]');
        const tabContents = document.querySelectorAll('[data-tab-content]');

        tabs.forEach(tab => {
            tab.addEventListener('click', () => {
                tabs.forEach(t => t.classList.remove('active'));
                tab.classList.add('active');

                tabContents.forEach(c => c.classList.add('hidden'));
                const target = document.querySelector(tab.dataset.tabTarget);
                target.classList.remove('hidden');
            });
        });

        document.getElementById('updatePhotoForm').addEventListener('submit', function (event) {
            const fileInput = document.getElementById('photo');
            const file = fileInput.files[0];
            if (file) {
                const maxSize = 2 * 1024 * 1024; // 2MB
                if (file.size > maxSize) {
                    alert('Dosya boyutu 2MB\'dan fazla olamaz.');
                    event.preventDefault();
                }
            }
        });
    </script>
}

<div class="card mx-auto mt-12">
    <h2 class="text-2xl font-bold mb-6 text-white">Profil Güncelle</h2>

    <div class="tabs flex justify-around mb-6 border-b border-gray-700">
        <button class="text-gray-400 font-semibold" data-tab-target="#nameTab">Ad Soyad</button>
        <button class="text-gray-400 font-semibold" data-tab-target="#passwordTab">Şifre</button>
        <button class="text-gray-400 font-semibold" data-tab-target="#photoTab">Fotoğraf</button>
    </div>


    <div>
        <div id="nameTab" data-tab-content class="@(ViewBag.ActiveTab == "Username" ? "" : "hidden")">
            <form id="updateNameForm" action="/edit/@Model.Id" method="post" autocomplete="off">
                <input type="hidden" name="FormType" value="Username" />

                <div class="mb-4 text-left">
                    <label for="name" class="tab-content-label text-white">Ad Soyad</label>
                    <input type="text" id="name" name="Username" value="@Model.Username"
                           class="w-full px-3 py-2 border border-gray-700 rounded-lg bg-transparent text-white focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent" required>
                </div>
                <button type="submit"
                        class="w-full bg-blue-500 text-white py-2 rounded-lg shadow-md hover:bg-blue-600">
                    Güncelle
                </button>
                @if (TempData["UsernameMessage"] != null)
                {
                    <div class="alert-message alert alert-danger text-center" style="margin-top:10px;">
                        @TempData["UsernameMessage"]
                    </div>
                }
            </form>
        </div>

        <div id="passwordTab" data-tab-content class="@(ViewBag.ActiveTab == "Password" ? "" : "hidden")">
            <form id="updatePasswordForm" action="/edit/@Model.Id" method="post" autocomplete="off">
                <input type="hidden" name="FormType" value="Password" />

                <div class="mb-4 text-left">
                    <label for="password" class="tab-content-label text-white">Yeni Şifre</label>
                    <input type="password" id="password" name="Password"
                           class="w-full px-3 py-2 border border-gray-700 rounded-lg bg-transparent text-white focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent" required>
                </div>
                <button type="submit"
                        class="w-full bg-blue-500 text-white py-2 rounded-lg shadow-md hover:bg-blue-600">
                    Güncelle
                </button>
                @if (TempData["PasswordMessage"] != null)
                {
                    <div class="alert-message alert alert-danger text-center" style="margin-top:10px;">
                        @TempData["PasswordMessage"]
                    </div>
                }
            </form>
        </div>

        <div id="photoTab" data-tab-content class="@(ViewBag.ActiveTab == "Photo" ? "" : "hidden")">
            <form id="updatePhotoForm" action="/edit/@Model.Id" method="post" enctype="multipart/form-data" autocomplete="off">
                <input type="hidden" name="FormType" value="Photo" />

                <div class="mb-4 text-left">
                    <label for="photo" class="tab-content-label text-white">Profil Fotoğrafı</label>
                    <input type="file" id="photo" name="Image" accept="image/png, image/jpeg"
                           class="w-full px-3 py-2 border border-gray-700 rounded-lg bg-transparent text-white focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent" required>
                    <small class="text-gray-400">Maksimum boyut: 2MB</small>
                </div>

                <input type="hidden" name="Username" value="@Model.Username" />
                <input type="hidden" name="Nickname" value="@Model.Nickname" />

                <button type="submit"
                        class="w-full bg-blue-500 text-white py-2 rounded-lg shadow-md hover:bg-blue-600">
                    Güncelle
                </button>
                @if (TempData["PhotoMessage"] != null)
                {
                    <div class="alert-message alert alert-danger text-center" style="margin-top:10px;">
                        @TempData["PhotoMessage"]
                    </div>
                }
            </form>

        </div>
        <script>
            // Tüm alert-message sınıflı divleri seç
            document.querySelectorAll('.alert-message').forEach(function (msg) {
                // 2 saniye sonra fade out
                setTimeout(function () {
                    msg.style.transition = "opacity 0.5s";
                    msg.style.opacity = 0;
                    setTimeout(function () { msg.remove(); }, 500);
                }, 2000);
            });
        </script>
    </div>
</div>
