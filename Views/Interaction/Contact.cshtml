  <style>
    :root{--bg:#0f1724;--card:#0b1220;--accent:#06b6d4;--muted:#9aa4b2}
    *{box-sizing:border-box}
    body{margin:0;font-family:Inter,system-ui,-apple-system,"Segoe UI",Roboto,'Helvetica Neue',Arial;color:#e6eef6;background:linear-gradient(180deg,#071029 0%,var(--bg) 100%);display:flex;align-items:center;justify-content:center;height:100vh}
    .card{width:min(420px,92vw);background:linear-gradient(180deg,rgba(255,255,255,0.02),rgba(255,255,255,0.01));border-radius:14px;padding:28px;text-align:center;box-shadow:0 8px 30px rgba(2,6,23,0.6);backdrop-filter: blur(6px);}
    .avatar{width:84px;height:84px;border-radius:50%;display:inline-grid;place-items:center;font-weight:700;font-size:28px;color:var(--bg);background:linear-gradient(135deg,var(--accent),#7c3aed);margin-bottom:12px}
    h1{margin:6px 0 6px;font-size:20px}
    p.lead{margin:0 0 16px;color:var(--muted);font-size:14px}
    .links{display:flex;gap:10px;justify-content:center;margin-bottom:18px}
    .link{display:inline-flex;align-items:center;gap:8px;padding:10px 12px;border-radius:10px;background:rgba(255,255,255,0.02);text-decoration:none;color:#eaf6fb;font-size:14px;transition:transform .15s,background .15s}
    .link:active{transform:translateY(1px)}
    .link:hover{background:linear-gradient(90deg,rgba(255,255,255,0.03),rgba(255,255,255,0.02))}
    .icon{width:18px;height:18px;display:inline-block}
    .cta{display:inline-block;margin-top:6px;padding:10px 16px;border-radius:10px;background:var(--accent);color:#07212a;text-decoration:none;font-weight:600}
    .small{font-size:12px;color:var(--muted);margin-top:12px}

        @@media (max-width:420px) {
            .card {
                padding: 20px
            }

            .avatar {
                width: 72px;
                height: 72px
            }
        }
  </style>
</head>
