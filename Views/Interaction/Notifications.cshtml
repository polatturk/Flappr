@using Flappr.Helpers
@model List<Flappr.Models.Notification>

@section Styles {
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
}

    <style>
        body {
            margin: 0;
            font-family: 'Arial', sans-serif;
            background: linear-gradient(135deg, #1e1e2a, #282840);
            min-height: 100vh;
            padding: 20px;
            color: white;
        }

        .notification-header {
            display: flex;
            justify-content: flex-start;
            gap: 100px;
            align-items: center;
            margin-bottom: 20px;
        }

            .notification-header h1 {
                margin: 0;
                color: #0ff;
                text-shadow: 0 0 5px #0ff;
            }

            .notification-header .actions button {
                margin-left: 10px;
                padding: 8px 12px;
                border-radius: 8px;
                border: none;
                cursor: pointer;
                font-weight: bold;
                transition: 0.2s;
            }

        .mark-read-btn {
            background-color: #0ff;
            color: #1e1e2a;
        }

            .mark-read-btn:hover {
                background-color: #0cc;
            }

        .delete-all-btn {
            background-color: rgba(255,0,0,0.8);
            color: white;
        }

            .delete-all-btn:hover {
                background-color: rgba(255,0,0,1);
            }

        .notification-banner {
            display: flex;
            align-items: center;
            gap: 15px;      
            width: 80%;
            max-width: 350px;
            padding: 15px;
            border-radius: 15px;
            background: rgba(255, 255, 255, 0.05);
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2), 0 1px 1px rgba(255, 255, 255, 0.05) inset;
            backdrop-filter: blur(10px);
            border: 2px solid rgba(255, 255, 255, 0.1);
            margin-bottom: 15px;
            position: relative;
            margin-left: 0; 
            margin-right: auto; 
        }

            .notification-banner::before {
                content: '';
                position: absolute;
                inset: 0;
                border-radius: 15px;
                background: linear-gradient(135deg, rgba(0, 255, 255, 0.3), rgba(255, 0, 255, 0.3), rgba(0, 0, 255, 0.3));
                filter: blur(10px);
                z-index: -1;
            }

        .icon {
            width: 50px;
            height: 50px;
            border-radius: 50%;
            background: rgba(255, 255, 255, 0.1);
            background-image: linear-gradient(135deg, #0ff, #f0f);
            display: flex;
            align-items: center;
            justify-content: center;
            box-shadow: 0 0 10px rgba(0, 255, 255, 0.5), 0 0 15px rgba(255, 0, 255, 0.5);
            position: relative;
        }

            .icon::after {
                content: '✉️';
                display: flex;
                align-items: center;
                justify-content: center;
                width: 70%;
                height: 70%;
                font-size: 1.6rem;
                position: absolute;
                top: 50%;
                left: 50%;
                transform: translate(-50%, -50%);
                opacity: 0.9;
            }

        .notification-content {
            display: flex;
            flex-direction: column;
            gap: 5px;
            color: white;
        }

        .notification-title {
            font-size: 1.1em;
            font-weight: bold;
            margin: 0;
            color: #0ff;
            text-shadow: 0 0 5px #0ff;
        }

        .notification-subtitle {
            font-size: 0.9em;
            margin: 0;
            color: rgba(255, 255, 255, 0.8);
        }

            .timestamp {
                font-size: 0.8em;
                color: rgba(255, 255, 255, 0.5);
                margin-top: 5px;
                align-self: flex-end;
            }

    .main-content {
        margin-left: 240px; /* sidebar width + padding */
        padding: 20px;
    }

    /* Bildirimleri responsive yapmak için max-width ekledik */
    .notifications-container {
        display: flex;
        flex-direction: column;
        align-items: flex-start;
    }

    .notification-banner {
        width: 80%; /* Daraltmak için genişliği %80 yaptık */
        max-width: 350px;
    }

    .sidebar {
        position: fixed;
        top: 0;
        left: 0;
        height: 100vh;
        width: 220px;
        background-color: rgba(0, 0, 0, 0.85);
        display: flex;
        flex-direction: column;
        padding: 20px 15px;
        box-shadow: 2px 0 8px rgba(0,0,0,0.3);
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        z-index: 1000;
    }

        .sidebar .logo img {
            width: 150px;
            height: auto;
            margin-bottom: 30px;
            user-select: none;
        }

        .sidebar .menu {
            list-style: none;
            padding: 0;
            margin: 0;
            flex-grow: 1;
        }

            .sidebar .menu li {
                margin-bottom: 15px;
            }

            .sidebar .menu a {
                color: #eee;
                text-decoration: none;
                font-size: 1rem;
                font-weight: 600;
                padding: 10px 14px;
                border-radius: 12px;
                display: block;
                transition: all 0.3s ease;
                border: 2px solid transparent;
            }

                .sidebar .menu a:hover {
                    background-color: #4da3ff;
                    color: #fff;
                    border-color: #4da3ff;
                }

            .sidebar .menu .profile-link a {
                font-weight: 700;
                color: #1e80e0;
            }

        .sidebar .user-info {
            margin-top: auto;
            font-size: 0.9rem;
            color: #ccc;
            font-weight: 600;
        }

            .sidebar .user-info span {
                color: #4da3ff;
                display: block;
                margin-bottom: 8px;
            }

            .sidebar .user-info a {
                color: #ff6b6b;
                font-weight: 700;
                text-decoration: none;
                padding: 6px 14px;
                border-radius: 12px;
                border: 2px solid transparent;
                transition: all 0.3s ease;
                display: inline-block;
            }

                .sidebar .user-info a:hover {
                    background-color: #ff4c4c;
                    border-color: #ff4c4c;
                    color: #fff;
                }
    </style>

<div class="sidebar">
    <a class="logo" asp-area="" asp-controller="Home" asp-action="Index">
        <img src="/Img/Flappr-logo.png" alt="Flappr Logo" />
    </a>

    <ul class="menu">
        <li><a asp-area="" asp-controller="Home" asp-action="Index"><i class="fas fa-home"></i> Anasayfa</a></li>
        <li><a asp-controller="Home" asp-action="Profile"><i class="fas fa-user"></i> Profil</a></li>
        <li><a asp-area="" asp-controller="Home" asp-action="Search"><i class="fas fa-search"></i> Ara</a></li>
        <li><a asp-area="" asp-controller="Home" asp-action="Search"><i class="fas fa-compass"></i> Keşfet</a></li>
        <li class="relative">
            <a asp-area="" asp-controller="Interaction" asp-action="Notifications" class="flex items-center">
                <i class="fas fa-bell text-lg"></i>
                <span class="ml-2">Bildirimler</span>
                @if (ViewBag.UnreadCount > 0)
                {
                    <span class="absolute top-0 right-0 bg-red-500 text-white text-xs rounded-full w-5 h-5 flex items-center justify-center">
                        @ViewBag.UnreadCount
                    </span>
                }
            </a>
        </li>
        <li><a asp-area="" asp-controller="Home" asp-action="Search"><i class="fas fa-envelope"></i> Mesajlar</a></li>
        <li><a asp-area="" asp-controller="Home" asp-action="Search"><i class="fas fa-cog"></i> Ayarlar</a></li>
    </ul>

    <div class="user-info">
        <a href="/Home/Cikis"><i class="fas fa-sign-out-alt"></i> Çıkış Yap</a>
    </div>
</div>

<div class="main-content">
    <div class="notification-header">
        <h1>Bildirimler</h1>
        <div class="actions">
            <form asp-action="MarkAsRead" method="post" style="display:inline">
                <button type="submit" class="mark-read-btn">Okundu Olarak İşaretle</button>
            </form>
            <form asp-action="DeleteNotifications" method="post" style="display:inline">
                <button type="submit" class="delete-all-btn">Tümünü Sil</button>
            </form>
        </div>
    </div>

    <div class="notifications-container">
        @if (Model.Any())
        {
            @foreach (var notification in Model)
            {
                <div class="notification-banner">
                    <div class="icon"></div>
                    <div class="notification-content">
                        <h2 class="notification-title">@notification.Type</h2>
                        <p class="notification-subtitle">@notification.Message</p>
                        <span class="timestamp">@TimeHelper.FormatTime(notification.CreatedDate)</span>
                    </div>
                </div>
            }
        }
        else
        {
            <p>Henüz bildirim yok 🎉</p>
        }
    </div>
</div>