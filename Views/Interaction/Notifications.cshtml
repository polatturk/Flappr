@using Flappr.Helpers
@model List<Flappr.Models.Notification>

@section Styles {
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@3.3.2/dist/tailwind.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">

    <style>
        .notification-card {
            transition: all 0.25s ease;
            position: relative;
            overflow: hidden;
            max-width: 400px;
            display: flex;
            align-items: flex-start;
            gap: 12px;
            padding: 12px;
            border-radius: 16px;
            background-color: #1f2937;
            margin-bottom: 16px; 
        }

            .notification-card::before {
                content: "";
                position: absolute;
                inset: 0;
                background: linear-gradient(135deg, rgba(129, 140, 248, 0.3), rgba(139, 92, 246, 0.3));
                opacity: 0;
                transition: opacity 0.25s ease;
                z-index: 0;
                pointer-events: none;
            }

            .notification-card:hover::before {
                opacity: 1;
            }

        .notification-content {
            position: relative;
            z-index: 10;
            flex: 1;
        }

        .line-clamp-2 {
            display: -webkit-box;
            -webkit-line-clamp: 2;
            -webkit-box-orient: vertical;
            overflow: hidden;
        }

        .btn-top-right {
            position: absolute;
            top: 8px;
            right: 8px;
            display: flex;
            gap: 6px;
            z-index: 20;
        }

        .btn-read, .btn-delete {
            cursor: pointer;
            display: flex;
            align-items: center;
            gap: 4px;
            font-size: 0.75rem;
        }
    </style>
}

<div class="min-h-screen bg-gray-900 text-white p-6">
    <div class="flex items-center justify-between mb-6">
        <h2 class="text-3xl font-bold flex items-center">
            <i class="fas fa-bell mr-3 text-yellow-400"></i> Bildirimler
        </h2>

        @if (Model.Any())
        {
            <form asp-action="DeleteNotifications" asp-controller="Interaction" method="post" class="mb-6">
                <button type="submit" class="">
                    <i class="bi bi-trash-fill"></i> Tümünü Temizle
                </button>
            </form>
        }
    </div>
    <br />

    @if (!Model.Any())
    {
        <div class="bg-gray-800 p-8 rounded-2xl shadow-lg text-center">
            <i class="fas fa-inbox text-gray-500 text-5xl mb-3"></i>
            <p class="text-gray-400 text-lg">Hiç bildirimin yok 🎉</p>
        </div>
    }
    else
    {
        <div class="space-y-4">
            @foreach (var notif in Model)
            {
                var bgColor = notif.Type switch
                {
                    "Like" => "bg-pink-500",
                    "Comment" => "bg-blue-500",
                    "Follow" => "bg-green-500",
                    _ => "bg-gray-500"
                };

                var iconClass = notif.Type switch
                {
                    "Like" => "fa-heart",
                    "Comment" => "fa-comment",
                    "Follow" => "fa-user-plus",
                    _ => "fa-bell"
                };

                <div class="notification-card">

                    <!-- Icon ve Mesaj -->
                    <span class="flex items-center justify-center w-10 h-10 rounded-full @bgColor mt-1">
                        <i class="fas @iconClass text-white text-sm"></i>
                    </span>

                    <div class="notification-content">
                        <p class="text-white text-sm line-clamp-2 hover:line-clamp-none cursor-pointer">
                            @notif.Message
                        </p>
                        <span class="text-gray-400 text-xs">@TimeHelper.FormatTime(notif.CreatedDate)</span>
                    </div>

                    <div class="btn-top-right">
                        <form asp-action="MarkAsRead" asp-controller="Interaction" method="post">
                            <input type="hidden" name="id" value="@notif.Id" />
                            <button type="submit" class="btn-read @(notif.IsRead ? "text-gray-400" : "text-red-400")">
                                <i class="fas @(notif.IsRead ? "fa-check" : "fa-circle")"></i>
                                @(notif.IsRead ? "Okundu" : "Okundu olarak işaretle")
                            </button>
                        </form>
                    </div>

                </div>
            }
        </div>
    }
</div>
