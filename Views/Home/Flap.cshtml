@using System.Globalization
@using Flappr.Helpers

@model Flappr.Dto.FlapRequest

@section Styles {
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
}

<body class="bg-gray-100">

    <div class="max-w-lg mx-auto mt-10">

        <div class="p-4">
            <a href="javascript:history.back()" class="inline-flex items-center text-blue-500 hover:text-blue-600 font-medium">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
                </svg>
                Geri
            </a>
        </div>
        <div class="bg-blue-50 p-4 rounded-lg shadow-md border border-blue-300">
            <div class="flex items-start">
                <a href="/profil/@Model.UserNickname">
                    <img class="w-12 h-12 rounded-full" src="/uploads/images.jpg" alt="Profil">
                </a>
                <div class="ml-4 w-full">
                    <div class="flex items-center space-x-2">
                        <a href="/profil/@Model.UserNickname" class="font-bold text-sm">
                            @Model.UserUsername
                        </a>
                        <span class="text-gray-500 text-sm">@("@" + Model.UserNickname)</span>
                        <span class="text-gray-500 text-sm">·</span>
                        <span class="text-gray-500 text-sm">@TimeHelper.FormatTime(Model.Flap.CreatedDate)</span>
                    </div>

                    <p class="mt-1 text-sm">
                        @Model.Flap.Detail
                    </p>
                </div>

            </div>
        </div>

        @if (ViewBag.AddYorum)
        {
            <div class="bg-white p-4 rounded-lg shadow-md mt-4">
                <h3 class="font-bold text-lg">Yorum Yap</h3>
                <form class="mt-2" action="/AddYorum" method="post" autocomplete="off">
                    <div class="flex items-start">
                        <div class="ml-4 w-full">
                            <textarea name="Summary" class="w-full p-2 border border-gray-300 rounded-lg" rows="4" placeholder="Yorumunuzu buraya yazın..."></textarea>
                            <input type="hidden" name="FlapId" value="@Model.Flap.Id" />
                            <button type="submit" class="mt-2 px-4 py-2 bg-blue-500 text-white rounded-lg hover:bg-blue-600">Gönder</button>
                        </div>
                    </div>
                </form>
            </div>
        }

        @foreach (var item in Model.Comments)
        {
            <div class="bg-white p-4 rounded-lg shadow-md mt-4">
                <div class="flex items-start">
                    <a href="/profil/@item.Nickname">
                        <img class="w-12 h-12 rounded-full" src="/uploads/images.jpg" alt="Yorum Yapan Profil">
                    </a>
                    <div class="ml-4 w-full">
                        <div class="flex items-center">
                            <h3 class="font-bold">@item.Username</h3>
                            <span class="text-gray-500 text-sm ml-2">@@@item.Nickname</span>
                            <span class="text-gray-500 text-sm ml-2">•</span>
                            <span class="text-gray-500 text-sm ml-2">@item.CreatedTime.ToString("g", CultureInfo.GetCultureInfo("tr"))</span>
                        </div>
                        <p class="mt-2 text-gray-700">@item.Summary</p>
                    </div>
                    @if (ViewBag.yetki == "full")
                    {
                        <a href="/YorumSil/@item.Id?FlapId=@Model.Flap.Id" onclick="return confirm('Emin misin?')" class="btn btn-danger">Sil</a>
                    }
                    else if (ViewBag.id == item.UserId)
                    {
                        <a href="/YorumSil/@item.Id?FlapId=@Model.Flap.Id" onclick="return confirm('Emin misin?')" class="btn btn-danger">Sil</a>
                    }
                </div>
            </div>
        }


    </div>
</body>