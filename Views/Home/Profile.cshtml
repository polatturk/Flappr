@using Flappr.Helpers
@using System.Globalization
@{

    ViewData["Title"] = "Profile - ";
}

@section Styles {
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <link href="/css/styles.css" rel="stylesheet">


}
 <style>
    .card {
        background: linear-gradient(180deg, rgba(255,255,255,0.03), rgba(255,255,255,0.01));
        border-radius: 0.75rem;
        box-shadow: 0 4px 6px rgba(0,0,0,0.1);
        padding: 1.5rem;
        margin-bottom: 1.5rem;
    }

    .profile-card {
        max-width: 42rem;
        margin: 2.5rem auto;
    }

    .card .user-info {
        display: flex;
        align-items: center;
        gap: 1rem;
    }

        .card .user-info .user-names {
            display: flex;
            align-items: center;
            gap: 0.5rem;
            color: #ffffff; 
        }

    .card .bio {
        max-width: 40ch;
        white-space: pre-wrap; 
        word-break: break-word; 
        color: #fff;
        font-size: 15px;
        line-height: 1.6;
    }

    .card .followers-info {
        display: flex;
        gap: 1rem;
        margin-top: 0.5rem;
        color: #ffffff;
        font-size: 0.875rem;
    }

    .card h3 {
        color: #ffffff;
    }

    .card .flap-detail {
        color: #ffffff;
        margin-top: 0.5rem;
    }

    .card .actions {
        display: flex;
        gap: 1.5rem;
        margin-top: 0.75rem;
    }

        .card .actions button,
        .card .actions a {
            display: flex;
            align-items: center;
            gap: 0.25rem;
            padding: 0.25rem 0.75rem;
            border-radius: 9999px;
            font-size: 0.875rem;
            transition: background-color 0.2s;
        }

            .card .actions button:hover,
            .card .actions a:hover {
                background-color: #e5e7eb;
            }

 </style>
<body class="bg-gray-200">
    <div class="profile-card card">
        @if (TempData["SuccessMessage"] != null)
        {
            <div id="formMessage" class="alert alert-success text-center">
                @TempData["SuccessMessage"]
            </div>
        }
        <a href="@Url.Action("Index", "Home")"
           class="absolute top-0 left-0 m-2 p-2 bg-white rounded-full shadow hover:bg-gray-100 transition"
           title="Geri">
            <i class="bi bi-arrow-left"></i>
        </a>
        
        
        <div class="flex items-center">
            
            
            <img class="w-24 h-24 rounded-full" src="@(Model.User.ImgUrl)" alt="Profile Photo">

            <div class="ml-6 flex-1">
                <div class="flex items-center justify-between">
                    <h2 class="text-xl font-bold text-white">@Model.User.Username</h2>


                    @if (ViewBag.profile)
                    {
                        <a class="flex items-center gap-2 border border-gray-400 text-gray-700 px-4 py-1.5 rounded-full hover:bg-gray-100 transition text-sm font-medium"
                           href="/edit/@Model.User.Nickname">
                            ✏️ Düzenle
                        </a>
                    }
                    else
                    {
                        @if (ViewBag.currentUserIsOwner != true)
                        {
                            <form method="post" action="/Interaction/Follows">
                                <input type="hidden" name="followerId" value="@Context.Session.GetString("userId")" />
                                <input type="hidden" name="followingId" value="@Model.User.Id" />
                                <button type="submit"
                                        class="flex items-center gap-2 px-4 py-1.5 rounded-full text-sm font-medium
                                               @(ViewBag.IsFollowing ? "bg-red-500 text-white hover:bg-red-600" : "bg-green-500 text-white hover:bg-green-600")">
                                    <i class="bi @(ViewBag.IsFollowing ? "bi-person-x-fill" : "bi-person-fill-add") text-white"></i>
                                    <span>@(ViewBag.IsFollowing ? "Takipten Çık" : "Takip Et")</span>
                                </button>
                            </form>
                        }

                    }
                </div>

                <p class="text-gray-600 text-sm">@@@Model.User.Nickname</p>
                <p class="bio"> @Model.User.Biography</p>

                <div class="followers-info">
                    <div class="flex items-center gap-1">
                        <i class="bi bi-people-fill"></i>
                        <span>Takipçi <strong>@Model.FollowersCount</strong></span>
                    </div>
                    <div class="flex items-center gap-1">
                        <i class="bi bi-person-check-fill"></i>
                        <span>Takip Edilen <strong>@Model.FollowingCount</strong></span>
                    </div>
                </div>
            </div>
        </div>

        <div class="mt-6">
            @foreach (var item in Model.Flaps)
            {
                <div class="card relative">
                    @if (ViewBag.profile)
                    {
                        <div class="absolute top-2 right-2">
                            <button type="button" class="menu-btn p-2 rounded-full focus:outline-none text-white hover:bg-transparent" data-id="@item.Id">
                                <i class="bi bi-three-dots-vertical"></i>
                            </button>

                            <div id="menu-dropdown-@item.Id" class="menu-dropdown hidden absolute right-0 mt-2 w-32 bg-white shadow-lg rounded-md ring-1 ring-black ring-opacity-5 z-10">
                                <div class="py-1">
                                    <a href="/flapEdit/@item.Id" class="block px-4 py-2 text-sm text-gray-700 hover:bg-white hover:text-gray-700">Düzenle</a>
                                    <a href="/FlapSil/@item.Id?nickname=@Model.User.Nickname" onclick="return confirm('Emin misin?')" class="block px-4 py-2 text-sm text-red-600 hover:bg-white hover:text-red-600">Sil</a>
                                </div>
                            </div>
                        </div>
                    }

                    <div class="flex items-center gap-3 mb-2">
                        <img src="@(Model.User.ImgUrl)" alt="Profil" class="w-10 h-10 rounded-full">
                        <div class="flex items-center">
                            <h3 class="text-white font-semibold">@item.Username</h3>
                            <span class="text-gray-400 text-base ml-2">@("@" + item.Nickname)</span>
                            <span class="text-gray-400 text-sm ml-2">•</span>
                            <span class="text-gray-400 text-base ml-2">@TimeHelper.FormatTime(item.CreatedDate)</span>
                        </div>
                    </div>

                    <p class="text-white mt-1">@item.Detail</p>

                    <div class="flex items-center mt-3 space-x-6 text-gray-500">
                        <a href="/Flap/@item.Id"
                           class="flex items-center space-x-1 px-3 py-1 rounded-full text-sm font-medium
                                       bg-gray-200 text-gray-800 hover:bg-gray-300 transition duration-200">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none"
                                 viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                                <path stroke-linecap="round" stroke-linejoin="round"
                                      d="M8 10h.01M12 10h.01M16 10h.01M21 12c0 4.418-4.03 8-9 8a9.77 9.77 0 01-4.3-.93L3 20l1.14-3.42A7.96 7.96 0 013 12c0-4.418 4.03-8 9-8s9 3.582 9 8z" />
                            </svg>
                            <span>@item.CommentsCount</span>
                        </a>

                        <form method="post" action="/Interaction/Likes">
                            <input type="hidden" name="flapId" value="@item.Id" />
                            <button type="submit"
                                    class="flex items-center space-x-1 px-3 py-1 rounded-full text-sm font-medium
                                           bg-gray-200 text-gray-800 hover:bg-gray-300">
                                <i class="bi @(item.IsLikedByCurrentUser ? "bi-suit-heart-fill text-danger" : "bi-suit-heart")"></i>
                                <span>@item.LikeCount</span>
                            </button>
                        </form>
                    </div>
                </div>

                <script>
                    const btn = document.getElementById("menu-btn-@item.Id");
                    const dropdown = document.getElementById("menu-dropdown-@item.Id");

                    btn.addEventListener("click", () => {
                        dropdown.classList.toggle("hidden");
                    });

                    window.addEventListener("click", (e) => {
                        if (!btn.contains(e.target) && !dropdown.contains(e.target)) {
                            dropdown.classList.add("hidden");
                        }
                    });
                </script>
            }
        </div>
        <script>

            document.addEventListener("DOMContentLoaded", function () {
                var msg = document.getElementById("formMessage");
                if (msg) {
                    setTimeout(function () {
                        msg.style.transition = "opacity 0.5s ease";
                        msg.style.opacity = "0";
                        setTimeout(function () {
                            msg.remove();
                        }, 500);
                    }, 2000);
                }
            });
            document.addEventListener("DOMContentLoaded", () => {
                document.querySelectorAll(".menu-btn").forEach(btn => {
                    btn.addEventListener("click", (e) => {
                        e.stopPropagation(); 
                        const id = btn.dataset.id;
                        const dropdown = document.getElementById(`menu-dropdown-${id}`);
                        dropdown.classList.toggle("hidden");
                    });
                });

                window.addEventListener("click", () => {
                    document.querySelectorAll(".menu-dropdown").forEach(dd => dd.classList.add("hidden"));
                });
            });
        </script>


    </div>  
</body>
