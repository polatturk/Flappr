@using Flappr.Helpers
@using System.Globalization
@{

    ViewData["Title"] = "Profile - ";
}

@section Styles {
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <link href="/css/styles.css" rel="stylesheet">


}

@* profil kismi bastan assagi guncellenicek *@
<body class="bg-gray-200">
    <div class="max-w-2xl mx-auto mt-10 bg-white p-6 rounded-lg shadow-md">
        <div class="flex items-center">
            <!-- Profil foto -->
            <img class="w-24 h-24 rounded-full" src="/uploads/images.jpg" alt="Profile Photo">

            <!-- Kullanıcı bilgileri -->
            <div class="ml-6 flex-1">
                <div class="flex items-center justify-between">
                    <h2 class="text-xl font-bold">@Model.User.Username</h2>


                    @if (ViewBag.profile)
                    {
                        <a class="flex items-center gap-2 border border-gray-400 text-gray-700 px-4 py-1.5 rounded-full hover:bg-gray-100 transition text-sm font-medium"
                           href="/duzenle/@Model.User.Nickname">
                            ✏️ Düzenle
                        </a>
                    }
                    else
                    {
                        @if (ViewBag.currentUserIsOwner != true)
                        {
                            <form method="post" action="/Interaction/Follows">
                                <input type="hidden" name="followerId" value="@Context.Session.GetInt32("userId")" />
                                <input type="hidden" name="followingId" value="@Model.User.Id" />
                                <button type="submit"
                                        class="flex items-center gap-2 px-4 py-1.5 rounded-full text-sm font-medium
                                               @(ViewBag.IsFollowing ? "bg-red-500 text-white hover:bg-red-600" : "bg-green-500 text-white hover:bg-green-600")">
                                    <i class="bi @(ViewBag.IsFollowing ? "bi-person-x-fill" : "bi-person-fill-add") text-white"></i>
                                    <span>@(ViewBag.IsFollowing ? "Takipten Çık" : "Takip Et")</span>
                                </button>
                            </form>
                        }

                    }
                </div>

                <p class="text-gray-600 text-sm">@@@Model.User.Nickname</p>
                <p> ⏩ Burası da bio işte..</p>

                <div class="flex items-center gap-4 text-gray-600 mt-2 text-sm">
                    <div class="flex items-center gap-1">
                        <i class="bi bi-people-fill"></i>
                        <span>Takipçi <strong>@Model.FollowersCount</strong></span>
                    </div>
                    <div class="flex items-center gap-1">
                        <i class="bi bi-person-check-fill"></i>
                        <span>Takip Edilen <strong>@Model.FollowingCount</strong></span>
                    </div>
                </div>
            </div>
        </div>

        <div class="mt-6">
            <h3 class="text-xl font-bold mb-4">Flaplar</h3>
            @foreach (var item in Model.Flaps)
            {
                <div class="bg-white p-4 rounded-lg shadow-md mb-4">
                    <!-- Kullanıcı bilgileri -->
                    <div class="flex items-center gap-3 mb-2">
                        <img src="@item.ImgUrl ?? " /uploads/images.jpg"" alt="Profil" class="w-10 h-10 rounded-full">
                        <div>
                            <h4 class="text-sm font-bold text-gray-900 flex items-center gap-2">
                                @item.Username
                                <span class="text-gray-600 text-xs">@("@" + item.Nickname)</span>
                            </h4>
                            <span class="text-gray-400 text-xs">@TimeHelper.FormatTime(item.CreatedDate)</span>
                        </div>
                    </div>

                    <!-- Flap detay -->
                    <p class="text-gray-800">@item.Detail</p>

                    <!-- Butonlar: yorum ve like -->
                    <div class="flex items-center mt-3 space-x-6 text-gray-500">
                        <a href="/Flap/@item.Id"
                           class="flex items-center space-x-1 px-3 py-1 rounded-full text-sm font-medium
                          bg-gray-200 text-gray-800 hover:bg-gray-300 transition duration-200">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none"
                                 viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                                <path stroke-linecap="round" stroke-linejoin="round"
                                      d="M8 10h.01M12 10h.01M16 10h.01M21 12c0 4.418-4.03 8-9 8a9.77 9.77 0 01-4.3-.93L3 20l1.14-3.42A7.96 7.96 0 013 12c0-4.418 4.03-8 9-8s9 3.582 9 8z" />
                            </svg>
                            <span>@item.CommentsCount</span>
                        </a>

                        <form method="post" action="/Interaction/Likes">
                            <input type="hidden" name="flapId" value="@item.Id" />
                            <button type="submit"
                                    class="flex items-center space-x-1 px-3 py-1 rounded-full text-sm font-medium
                                   bg-gray-200 text-gray-800 hover:bg-gray-300">
                                <i class="bi @(item.IsLikedByCurrentUser ? "bi-suit-heart-fill text-danger" : "bi-suit-heart")"></i>
                                <span>@item.LikeCount</span>
                            </button>
                        </form>
                    </div>

                    @if (ViewBag.profile)
                    {
                        <div class="mt-2">
                            <a href="/FlapSil/@item.Id?nickname=@Model.User.Nickname"
                               onclick="return confirm('Emin misin?')"
                               class="text-red-600 hover:text-red-800 text-sm font-medium">
                                ❌ Sil
                            </a>
                        </div>
                    }
                </div>
            }
        </div>
    </div>
</body>
