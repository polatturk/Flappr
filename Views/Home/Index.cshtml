@using System.Globalization
@using Flappr.Dto
@using Flappr.Helpers
@model List<FlapRequest>

@section Styles {
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
}

<style>
    /* Sidebar */
    .sidebar {
        position: fixed;
        top: 0;
        left: 0;
        height: 100vh;
        width: 220px;
        background-color: rgba(0, 0, 0, 0.85);
        display: flex;
        flex-direction: column;
        padding: 20px 15px;
        box-shadow: 2px 0 8px rgba(0,0,0,0.3);
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        z-index: 1000;
    }

        .sidebar .logo img {
            width: 150px;
            height: auto;
            margin-bottom: 30px;
            user-select: none;
        }

        .sidebar .menu {
            list-style: none;
            padding: 0;
            margin: 0;
            flex-grow: 1;
        }

            .sidebar .menu li {
                margin-bottom: 15px;
            }

            .sidebar .menu a {
                color: #eee;
                text-decoration: none;
                font-size: 1rem;
                font-weight: 600;
                padding: 10px 14px;
                border-radius: 12px;
                display: block;
                transition: all 0.3s ease;
                border: 2px solid transparent;
            }

                .sidebar .menu a:hover {
                    background-color: #4da3ff;
                    color: #fff;
                    border-color: #4da3ff;
                }

            .sidebar .menu .profile-link a {
                font-weight: 700;
                color: #1e80e0;
            }

        .sidebar .user-info {
            margin-top: auto;
            font-size: 0.9rem;
            color: #ccc;
            font-weight: 600;
        }

    .sidebar .user-info span {
        color: #4da3ff;
        display: block;
        margin-bottom: 8px;
    }

            .sidebar .user-info a {
                color: #ff6b6b;
                font-weight: 700;
                text-decoration: none;
                padding: 6px 14px;
                border-radius: 12px;
                border: 2px solid transparent;
                transition: all 0.3s ease;
                display: inline-block;
            }

                .sidebar .user-info a:hover {
                    background-color: #ff4c4c;
                    border-color: #ff4c4c;
                    color: #fff;
                }

    /* Main content */
    .main-content {
        margin-left: 220px;
        padding: 40px 20px;
        min-height: 100vh;
    }

    /* Card styles */
    .card-glass {
        background: linear-gradient(180deg, rgba(255,255,255,0.03), rgba(255,255,255,0.01));
        border-radius: 16px;
        padding: 25px;
        box-shadow: 0 8px 32px rgba(0,0,0,0.4);
        backdrop-filter: blur(6px);
        -webkit-backdrop-filter: blur(6px);
        color: #fff;
        margin-bottom: 25px;
        max-width: 600px;
        transition: box-shadow 0.3s ease;
    }

        .card-glass:hover {
            box-shadow: 0 10px 40px rgba(0,0,0,0.5);
        }

    .flap-avatar {
        width: 48px;
        height: 48px;
        border-radius: 50%;
        margin-right: 12px;
        object-fit: cover;
    }

    .flap-textarea {
        width: 100%;
        border: none;
        resize: none;
        font-size: 15px;
        padding: 12px;
        border-radius: 12px;
        background: rgba(255,255,255,0.05);
        color: #fff !important;
        transition: background 0.2s ease, box-shadow 0.3s ease;
    }

        .flap-textarea:focus {
            background: rgba(255,255,255,0.1);
            outline: none;
            box-shadow: 0 0 8px 2px rgba(77, 163, 255, 0.5);
        }

    .flap-btn {
        background: linear-gradient(135deg, #4da3ff, #1e80e0);
        border: none;
        padding: 8px 18px;
        border-radius: 25px;
        color: #fff;
        font-weight: 600;
        transition: transform 0.2s ease, background 0.3s ease;
    }

        .flap-btn:hover {
            transform: translateY(-2px);
            background: linear-gradient(135deg, #1e80e0, #4da3ff);
        }

    /* Flap items */
    .flap-item {
        background: linear-gradient(180deg, rgba(255,255,255,0.03), rgba(255,255,255,0.01));
        border-radius: 16px;
        padding: 25px;
        box-shadow: 0 8px 32px rgba(0,0,0,0.4);
        backdrop-filter: blur(6px);
        margin-bottom: 20px;
        transition: box-shadow 0.3s ease;
        max-width: 600px;
    }

        .flap-item:hover {
            box-shadow: 0 10px 40px rgba(0,0,0,0.5);
        }

    /* Avatar */
    .flap-avatar {
        width: 48px;
        height: 48px;
        border-radius: 50%;
        margin-right: 12px;
        object-fit: cover;
    }

    /* Select */
    .flap-select {
        border-radius: 10px;
        font-size: 14px;
        padding: 6px 30px 6px 10px;
        background: #273444 url("data:image/svg+xml;utf8,<svg fill='white' height='20' viewBox='0 0 24 24' width='20' xmlns='http://www.w3.org/2000/svg'><path d='M7 10l5 5 5-5z'/></svg>") no-repeat right 10px center;
        background-size: 16px;
        border: 1px solid #333;
        color: #fff; /* yazılar beyaz */
        appearance: none; /* default select stilini kaldırır */
        outline: none; /* mavi outline iptal */
        box-shadow: none; /* glow iptal */
    }

        .flap-select:focus {
            outline: none;
            box-shadow: none;
        }

        .flap-select option {
            background: #273444; /* dropdown içi siyah */
            color: #fff; /* dropdown yazıları beyaz */
        }

            /* Hover ve focus efektlerini iptal */
            .flap-select option:hover,
            .flap-select option:focus {
                background: #273444 !important;
                color: #fff !important;
                outline: none;
                box-shadow: none;
            }


    .flap-detail {
        white-space: pre-wrap; /* Satır sonu ve boşlukları korur */
        word-break: break-word; /* Uzun kelime veya linkler satırdan taşarsa kır */
        max-height: 200px; /* İstersen yüksekliği sınırla */
        overflow: hidden; /* Taşan kısmı gizle */
        line-height: 1.6; /* Okunabilir satır yüksekliği */
    }
    /* Label */
    .flap-label {
        font-size: 14px;
        color: #ccc;
    }

    body, .flap-item {
        font-family: 'Segoe UI', Roboto, Helvetica, Arial, sans-serif;
        color: #fff;
    }

        .flap-item h2 a {
            font-weight: 700;
            font-size: 15px;
            color: #fff;
            text-decoration: none;
        }

            .flap-item h2 a:hover {
                color: #1d9bf0; 
            }

    .text-muted {
        font-size: 14px;
        color: #1f2937 !important;

    /* Responsive */
    @@media (max-width: 768px) {
        .sidebar {
            width: 50%;
            height: auto;
            position: relative;
        }

        .main-content {
            display: flex;
            padding: 20px;
            flex-direction: column;
            align-items: center; /* ortala */

        }
        .flap-form, .flap-item {
            max-width: 150%;
        }
    }

</style>

<!-- Sidebar -->
<div class="sidebar">
    <a class="logo" asp-area="" asp-controller="Home" asp-action="Index">
        <img src="/Img/Flappr-logo.png" alt="Flappr Logo" />
    </a>

    <ul class="menu">
        <li><a asp-area="" asp-controller="Home" asp-action="Index"><i class="fas fa-home"></i> Anasayfa</a></li>
        <li><a asp-controller="Home" asp-action="Profile"><i class="fas fa-user"></i> Profil</a></li>
        <li><a asp-area="" asp-controller="Home" asp-action="Search"><i class="fas fa-search"></i> Ara</a></li>
        <li><a asp-area="" asp-controller="Home" asp-action="Search"><i class="fas fa-compass"></i> Keşfet</a></li>
        <li class="relative">
            <a asp-area="" asp-controller="Interaction" asp-action="Notifications" class="flex items-center">
                <i class="fas fa-bell text-lg"></i>
                <span class="ml-2">Bildirimler</span>
                @if (ViewBag.UnreadCount > 0)
                {
                    <span class="absolute top-0 right-0 bg-red-500 text-white text-xs rounded-full w-5 h-5 flex items-center justify-center">
                        @ViewBag.UnreadCount
                    </span>
                }
            </a>
        </li>
        <li><a asp-area="" asp-controller="Home" asp-action="Search"><i class="fas fa-envelope"></i> Mesajlar</a></li>
        <li><a asp-area="" asp-controller="Home" asp-action="Search"><i class="fas fa-cog"></i> Ayarlar</a></li>
    </ul>

    <div class="user-info">
        <a href="/Home/Cikis"><i class="fas fa-sign-out-alt"></i> Çıkış Yap</a>
    </div>
</div>

<div class="main-content">
    <!-- Flap Form -->
    <div class="flap-form card-glass">
        <form action="/AddFlap" method="post" autocomplete="off">
            <div class="d-flex align-items-start mb-3">
                <img src="@(ViewBag.CurrentUser?.ImgUrl)" alt="User Avatar" class="flap-avatar" />
                <textarea id="FlapContent" name="detail" class="form-control flap-textarea" rows="3" required placeholder="Neler oluyor?"></textarea>
                
            </div>
            
            <div class="d-flex justify-content-between align-items-center">
                <div class="d-flex gap-2 align-items-center">
                    <select class="form-select flap-select" id="visibilitySelect" name="visibility" required>
                        <option value="true">🌍 Herkese Açık</option>
                        <option value="false">🔒 Gizli</option>
                    </select>

                </div>
                
                <div class="flex justify-between items-center text-sm text-white">
                    <span id="charCount">0 / 200</span>
                </div>
                <button type="submit" class="btn flap-btn">Flapla 🚀</button>
                
            </div>
            @if (TempData["FlapMessage"] != null)
            {
                <div class="alert-message alert alert-danger text-center" style="margin-top:10px;">
                    @TempData["FlapMessage"]
                </div>
            }
        </form>
    </div>

    @foreach (var flap in Model)
    {
        <div class="flap-item">
            <div class="d-flex align-items-start">
                <a href="/profile/@flap.UserNickname">
                    <img class="flap-avatar" src="@(flap.UserImgUrl)" alt="Profile Photo">
                </a>
                <div class="ml-3 w-100">
                    <div class="d-flex align-items-center space-x-2">
                        <h2 class="font-weight-bold mb-0">
                            <a href="/profile/@flap.UserNickname">@flap.UserUsername</a>
                        </h2>
                        <span class="text-gray-500 text-sm">@("@" + flap.UserNickname)</span>
                        <span class="text-gray-500 text-sm">·</span>
                        <span class="text-gray-500 text-sm">@TimeHelper.FormatTime(flap.CreatedDate)</span>
                    </div>

                    <a href="/Flap/@flap.Id" class="text-white block mt-2 flap-detail">@flap.Detail</a>

                    <div class="d-flex mt-3 gap-3 text-white">
                        <a href="/Flap/@flap.Id" class="flex items-center space-x-1 px-3 py-1 rounded-full text-sm font-medium bg-gray-200 text-gray-800 hover:bg-gray-300 transition duration-200">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                                <path stroke-linecap="round" stroke-linejoin="round" d="M8 10h.01M12 10h.01M16 10h.01M21 12c0 4.418-4.03 8-9 8a9.77 9.77 0 01-4.3-.93L3 20l1.14-3.42A7.96 7.96 0 013 12c0-4.418 4.03-8 9-8s9 3.582 9 8z" />
                            </svg>
                            <span>@flap.CommentsCount</span>
                        </a>

                        <form method="post" action="/Interaction/Likes">
                            <input type="hidden" name="flapId" value="@flap.Id" />
                            <button type="submit" class="flex items-center space-x-1 px-3 py-1 rounded-full text-sm font-medium
                                    @(flap.IsLikedByCurrentUser ? "bg-gray-200 text-gray-800 hover:bg-gray-300" : "bg-gray-200 text-gray-800 hover:bg-gray-300")">
                                <i class="bi @(flap.IsLikedByCurrentUser ? "bi-suit-heart-fill text-danger" : "bi-suit-heart-fill text-white")"></i>
                                <span>@flap.LikeCount</span>
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    }

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const flapInput = document.getElementById("FlapContent");
            const charCount = document.getElementById("charCount");

            if (flapInput && charCount) {
                function updateCount() {
                    let length = flapInput.value.length;
                    charCount.textContent = `${length} / 200`;
                    charCount.style.color = length > 200 ? "red" : "white";
                }

                updateCount();
                flapInput.addEventListener("input", updateCount);
            }
        });
        document.querySelectorAll('.alert-message').forEach(function (msg) {
            setTimeout(function () {
                msg.style.transition = "opacity 0.5s";
                msg.style.opacity = 0;
                setTimeout(function () { msg.remove(); }, 500);
            }, 2000);
        });
    </script>
</div>
