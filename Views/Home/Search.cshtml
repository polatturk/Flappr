@model Flappr.Dto.SearchRequest
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
<link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">



@{
    ViewData["Title"] = "Search - ";
}

<style>
    .search-container {
        width: min(420px, 92vw);
        background: linear-gradient(180deg, rgba(255,255,255,0.02), rgba(255,255,255,0.01));
        border-radius: 14px;
        padding: 28px;
        margin: 30px auto;
        text-align: center;
        box-shadow: 0 8px 30px rgba(2,6,23,0.6);
        backdrop-filter: blur(6px);
        -webkit-backdrop-filter: blur(6px);
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

        .search-container h2 {
            text-align: center;
            margin-bottom: 1.5rem;
            color: aliceblue;
        }

        .search-container form {
            display: flex;
            gap: 10px;
            margin-bottom: 1.5rem;
        }

        .search-container input[type="text"] {
            flex-grow: 1;
            padding: 10px 15px;
            border-radius: 8px;
            border: none;
            background: rgba(255, 255, 255, 0.1);
            color: #fff;
            font-size: 1rem;
            transition: background 0.3s ease;
        }

            .search-container input[type="text"]::placeholder {
                color: #ccc;
            }

            .search-container input[type="text"]:focus {
                background: rgba(255, 255, 255, 0.15);
                outline: none;
                box-shadow: 0 0 5px #4da3ff;
                color: #fff;
            }

        .search-container button {
            padding: 8px 16px;
            background-color: #4da3ff;
            border: none;
            border-radius: 10px;
            color: #fff;
            font-weight: 600;
            font-size: 1rem;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

            .search-container button:hover {
                background-color: #1e80e0;
            }

        .search-container ul {
            list-style-type: none;
            padding-left: 0;
            max-height: 250px;
            overflow-y: auto;
            border-top: 1px solid rgba(255,255,255,0.2);
        }

            .search-container ul li {
                padding: 10px 0;
                border-bottom: 1px solid rgba(255,255,255,0.1);
                font-size: 1rem;
            }

                .search-container ul li a {
                    color: #a7cdf0;
                    text-decoration: none;
                    margin-left: 5px;
                    font-weight: 500;
                }

                    .search-container ul li a:hover {
                        text-decoration: underline;
                        color: #4da3ff;
                    }

        .search-container p.no-result {
            color: #ff6b6b;
            font-weight: 600;
            text-align: center;
            margin-top: 1rem;
            font-size: 1rem;
        }
</style>


<div class="search-container">
    <a href="@Url.Action("Index", "Home")"
       class="absolute top-0 left-0 m-1 p-1 bg-white rounded-full shadow hover:bg-gray-100 transition z-50"
       title="Geri">
        <i class="bi bi-arrow-left text-lg"></i>
    </a>
    <h2>Kullanıcı Arama</h2>

    <form asp-action="Search" method="post" autocomplete="off">
        <input type="text" asp-for="SearchTerm" placeholder="Kullanıcı adı" required />
        <button type="submit">Ara</button>
    </form>

    @if (Model.Sonuc != null && Model.Sonuc.Any())
    {
        <ul>
            @foreach (var user in Model.Sonuc)
            {
                <li class="text-white">@user.UserUsername - <a href="/profile/@user.UserNickname">@user.UserNickname</a></li>
            }
        </ul>
    }
    else if (Model.SearchTerm != null)
    {
        <p class="no-result">Sonuç bulunamadı.</p>
    }
</div>
