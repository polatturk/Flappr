@model Flappr.Dto.SearchRequest

@{
    ViewData["Title"] = "Search - ";
}

<style>
    .search-container {
        background: rgba(0, 0, 0, 0.5);
        border-radius: 20px;
        padding: 40px 30px;
        color: #fff;
        max-width: 400px;
        margin: 30px auto;
        box-shadow: 0 8px 32px rgba(0, 0, 0, 0.4);
        backdrop-filter: blur(8px);
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

        .search-container h2 {
            text-align: center;
            margin-bottom: 1.5rem;
            color: aliceblue;
        }

        .search-container form {
            display: flex;
            gap: 10px;
            margin-bottom: 1.5rem;
        }

        .search-container input[type="text"] {
            flex-grow: 1;
            padding: 10px 15px;
            border-radius: 8px;
            border: none;
            background: rgba(255, 255, 255, 0.1);
            color: #fff;
            font-size: 1rem;
            transition: background 0.3s ease;
        }

            .search-container input[type="text"]::placeholder {
                color: #ccc;
            }

            .search-container input[type="text"]:focus {
                background: rgba(255, 255, 255, 0.15);
                outline: none;
                box-shadow: 0 0 5px #4da3ff;
                color: #fff;
            }

        .search-container button {
            padding: 8px 16px;
            background-color: #4da3ff;
            border: none;
            border-radius: 10px;
            color: #fff;
            font-weight: 600;
            font-size: 1rem;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

            .search-container button:hover {
                background-color: #1e80e0;
            }

        .search-container ul {
            list-style-type: none;
            padding-left: 0;
            max-height: 250px;
            overflow-y: auto;
            border-top: 1px solid rgba(255,255,255,0.2);
        }

            .search-container ul li {
                padding: 10px 0;
                border-bottom: 1px solid rgba(255,255,255,0.1);
                font-size: 1rem;
            }

                .search-container ul li a {
                    color: #a7cdf0;
                    text-decoration: none;
                    margin-left: 5px;
                    font-weight: 500;
                }

                    .search-container ul li a:hover {
                        text-decoration: underline;
                        color: #4da3ff;
                    }

        .search-container p.no-result {
            color: #ff6b6b;
            font-weight: 600;
            text-align: center;
            margin-top: 1rem;
            font-size: 1rem;
        }
</style>

<div class="search-container">
    <h2>Kullanıcı Arama</h2>

    <form asp-action="Search" method="post" autocomplete="off">
        <input type="text" asp-for="SearchTerm" placeholder="Kullanıcı adı" />
        <button type="submit">Ara</button>
    </form>

    @if (Model.Sonuc != null && Model.Sonuc.Any())
    {
        <ul>
            @foreach (var user in Model.Sonuc)
            {
                <li>@user.Username - <a href="/profil/@user.Nickname">@user.Nickname</a></li>
            }
        </ul>
    }
    else if (Model.SearchTerm != null)
    {
        <p class="no-result">Sonuç bulunamadı.</p>
    }
</div>
